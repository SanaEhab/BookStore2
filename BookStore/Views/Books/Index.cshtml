@using BookStore.ViewModel
@model List<BookVM>

@section Title {
Books
}
@section SubTitle {
Show
}
@section Buttons {
	<a asp-controller="Books" asp-action="Create" class="btn btn-primary">Create</a>
}
@if (!Model.Any())
{
	<div class="card-body">
		<div class="alert alert-danger alert-dismissible">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
			<h5><i class="icon fas fa-ban"></i> Alert!</h5>
			Danger alert preview. This alert is dismissable. A wonderful serenity has taken possession of my
			entire
			soul, like these sweet mornings of spring which I enjoy with my whole heart.
		</div>
	</div>

}
else
{
	<div class="card-body">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th style="width: 10px">#</th>
					<th>Title</th>
					<th>Author</th>
					<th>Publisher</th>
					<th>Publish date</th>
					<th>Image</th>
					<th>Categories</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Title</td>
						<td>@item.Author</td>
						<td>@item.Publisher</td>
						<td>@item.PublishDate</td>
						<td>
							<img src="~/images/books/@item.ImageURL" width="50px" alt="@item.Description" />
						</td>
						<td>@string.Join(",",item.Categories)</td>
						<td>
							<a class="btn btn-danger btn-sm" asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id">
								Delete
								<i class="fas fa-trash-alt"></i>
							</a>
						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>
}
